{
  "dashboard": {
    "title": "TruLens RAG Quality Monitoring",
    "tags": ["trulens", "rag", "quality"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "15s",
    "panels": [
      {
        "id": 1,
        "title": "Answer Quality Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "trulens_answer_relevance_score",
            "legendFormat": "Answer Relevance"
          },
          {
            "expr": "trulens_groundedness_score",
            "legendFormat": "Groundedness"
          },
          {
            "expr": "trulens_context_relevance_score",
            "legendFormat": "Context Relevance"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Query Latency Percentiles",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(trulens_query_latency_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(trulens_query_latency_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(trulens_query_latency_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Queries Per Minute",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(trulens_queries_total[1m]) * 60",
            "legendFormat": "QPM"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(trulens_errors_total[5m])",
            "legendFormat": "Errors/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "Average Scores by Retrieval Mode",
        "type": "stat",
        "targets": [
          {
            "expr": "avg by (retrieval_mode) (trulens_answer_relevance_score)",
            "legendFormat": "{{retrieval_mode}}"
          }
        ],
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 8}
      }
    ]
  }
}
